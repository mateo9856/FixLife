<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixLife.ClientApp.Views.FirstConfig.FirstPlanCreator"
             xmlns:plan="clr-namespace:FixLife.ClientApp.Views.FirstConfig.PlanViews"
             Title="FirstPlanCreator">
    <VerticalStackLayout>

        <plan:WeeklyWork />

        <plan:FreeTime IsEnabled="False" IsVisible="False" />

        <plan:LearnTime IsEnabled="False" IsVisible="False" />

        <FlexLayout JustifyContent="SpaceBetween" HorizontalOptions="Center" MaximumWidthRequest="500">
            <Button VerticalOptions="Center"
                BackgroundColor="MediumPurple"
                TextColor="White"
                IsEnabled="False"
                Text="Previous"
                />
            <Button VerticalOptions="Center"
                BackgroundColor="MediumPurple"
                TextColor="White"
                Text="Next"
                />
        </FlexLayout>


    </VerticalStackLayout>
</ContentPage>