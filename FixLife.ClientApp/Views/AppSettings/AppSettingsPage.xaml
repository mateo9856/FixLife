<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FixLife.ClientApp.Views.AppSettings.AppSettingsPage"
             Title="AppSettingsPage">
    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Styles/FixLifeStyles.xaml" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label 
            Text="SETTINGS"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout>
            <ListView>
                
            </ListView>
        </StackLayout>
        <StackLayout>
            <Button Text="Save" Style="{StaticResource Key=PurpButton}" Clicked="Save_Clicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>