<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Main="clr-namespace:FixLife.ClientApp.ViewModels.Main"
             x:Class="FixLife.ClientApp.Views.MainPage.Dashboard"
             Title="Dashboard">
	<ContentPage.BindingContext>
		<Main:DashboardViewModel/>
	</ContentPage.BindingContext>
    <VerticalStackLayout>
        <StackLayout>
            <Label Text="WEEKLY WORK" />
        </StackLayout>
        <StackLayout>
            <Label Text="FREE TIME" />
        </StackLayout>
        <StackLayout>
            <Label Text="LEARN TIME" />
        </StackLayout>
        <StackLayout MaximumHeightRequest="80">
            <Button Text="Edit plan" BackgroundColor="Purple" TextColor="White" Command="{Binding EditPlanCommand}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>